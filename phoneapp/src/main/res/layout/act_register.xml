            <!--android:paddingBottom="@dimen/x12"-->
            <!--android:text="@string/login_32"-->
            <!--android:textColor="#016CC9"-->
            <!--android:textSize="@dimen/x22" />-->
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x40"
        android:src="@mipmap/pic_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x30"
        android:text="@string/login_12"
        android:textColor="@color/black"
        android:textSize="@dimen/x40" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x70"
        android:orientation="horizontal"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/act_ver_code_et1"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_gravity="center"
                android:background="@drawable/bg_ver_code_input"
                android:digits="0123456789"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textColor="@color/black_191919"
                android:textSize="@dimen/x50" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <EditText
                android:id="@+id/act_ver_code_et2"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_gravity="center"
                android:background="@drawable/bg_ver_code_input"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textColor="@color/black_191919"
                android:textSize="@dimen/x50" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <EditText
                android:id="@+id/act_ver_code_et3"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_gravity="center"
                android:background="@drawable/bg_ver_code_input"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textColor="@color/black_191919"
                android:textSize="@dimen/x50" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <EditText
                android:id="@+id/act_ver_code_et4"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_gravity="center"
                android:background="@drawable/bg_ver_code_input"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:textColor="@color/black_191919"
                android:textSize="@dimen/x50" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>

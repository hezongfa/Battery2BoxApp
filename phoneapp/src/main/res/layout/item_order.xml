<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/item_order_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_marginStart="@dimen/x30"
            android:gravity="center_vertical"
            android:text="@string/order_5"
            android:textColor="@color/gray_6f6f6f"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_order_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x80"
                android:gravity="center_vertical"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x80"
                android:gravity="center_vertical"
                android:text=" / "
                android:textColor="@android:color/black"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/item_order_pay_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x80"
                android:gravity="center_vertical"
                android:textSize="@dimen/x28" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@id/item_order_no_tv"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:background="@color/line" />

        <TextView
            android:id="@+id/item_order_time_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_no_tv"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:gravity="center_vertical"
            android:text="@string/order_1"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/item_order_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_no_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:layout_marginEnd="@dimen/x30"
            android:gravity="center_vertical"
            android:text="@string/order_1"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/item_order_address_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_time_tv"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:gravity="center_vertical"
            android:text="@string/order_2"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/item_order_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_time_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:layout_marginEnd="@dimen/x30"
            android:gravity="center_vertical"
            android:text="@string/order_1"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/item_order_price_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_address_tv1"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:gravity="center_vertical"
            android:text="@string/order_3"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/item_order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_address_tv1"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:layout_marginEnd="@dimen/x30"
            android:gravity="center_vertical"
            android:text="@string/order_1"
            android:textColor="@color/black_4d4d4d"
            android:textSize="@dimen/x26" />

        <View
            android:id="@+id/item_order_line_v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_below="@id/item_order_price_tv1"
            android:layout_marginTop="@dimen/x14"
            android:background="@color/line" />


        <View
            android:id="@+id/item_order_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_below="@id/item_order_price_tv1"
            android:layout_marginTop="@dimen/x14"
            android:background="@color/bg" />

        <LinearLayout
            android:id="@+id/item_order_action_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_order_line_1"
            android:layout_marginTop="@dimen/x12"
            android:layout_marginBottom="@dimen/x12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_order_buy_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/x70"
                android:layout_marginStart="@dimen/x32"
                android:layout_marginEnd="@dimen/x16"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow_r90px"
                android:gravity="center"
                android:text="@string/order_29"
                android:textColor="#0099cc"
                android:textSize="@dimen/x26" />

            <TextView
                android:id="@+id/item_order_error_tv"
                android:layout_width="0dp"
                android:layout_height="@dimen/x70"
                android:layout_marginStart="@dimen/x16"
                android:layout_marginEnd="@dimen/x32"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_yellow_r90px"
                android:gravity="center"
                android:text="@string/order_4"
                android:textColor="#EC8E02"
                android:textSize="@dimen/x26" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x10"
            android:layout_below="@id/item_order_action_ll"
            android:background="@color/bg" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_order_del_tv"
        android:layout_width="@dimen/x120"
        android:layout_height="fill_parent"
        android:background="@color/red_d72c2a"
        android:gravity="center"
        android:text="@string/app_32"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x28" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/act_device_detail_iv"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x300"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/pic_device_detail_p" />

    <LinearLayout
        android:id="@+id/act_device_detail_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/act_device_detail_iv"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginEnd="@dimen/x40"
        android:background="@drawable/bg_round_c"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x72"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/borrow_2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/act_device_detail_fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x72"
                android:gravity="center"
                android:text="@string/borrow_3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x72"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/x6"
                android:gravity="center"
                android:text="@string/borrow_4"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@color/line" />


        <TextView
            android:id="@+id/act_device_detail_rentCost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/x16"
            android:text="@string/borrow_5"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/act_device_detail_highCost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x4"
            android:gravity="center"
            android:paddingBottom="@dimen/x16"
            android:text="@string/borrow_10"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@color/line" />


        <TextView
            android:id="@+id/act_device_detail_highCost_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/x16"
            android:text="@string/borrow_6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x28" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x4"
            android:gravity="center"
            android:paddingBottom="@dimen/x16"
            android:text="@string/borrow_11"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x24" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@color/line" />


        <TextView
            android:id="@+id/act_device_detail_more_than_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/x16"
            android:text="@string/borrow_7"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/act_device_detail_more_than_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x4"
            android:layout_marginEnd="@dimen/x10"
            android:gravity="center"
            android:paddingBottom="@dimen/x16"
            android:text="@string/borrow_8"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x24" />
    </LinearLayout>

    <Button
        android:id="@+id/act_device_detail_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/x80"
        android:layout_marginTop="@dimen/x50"
        android:layout_marginEnd="@dimen/x80"
        android:layout_marginBottom="@dimen/x50"
        android:background="@drawable/bg_btn_yellow_r90px"
        android:text="@string/borrow_12"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x36" />
</RelativeLayout>
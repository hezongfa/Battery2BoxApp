<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_chat_notify_view_time_tv"
        android:layout_marginTop="@dimen/x20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_999999"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_marginStart="@dimen/x30"
        android:layout_marginEnd="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/x30"
        android:background="@drawable/bg_round_c"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_chat_notify_view_top_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/item_chat_notify_view_top_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x30"
            android:paddingEnd="@dimen/x20">

            <com.chenyi.baselib.widget.CircleImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:text="@string/app_name"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/x32" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:background="@color/line" />

        <TextView
            android:id="@+id/item_chat_notify_view_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/x6"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/x6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x28" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:layout_marginBottom="@dimen/x10"
            android:background="@color/line" />
        <TextView
            android:id="@+id/item_chat_notify_view_start_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/x3"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/x3"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/x28" />
        <TextView
            android:id="@+id/item_chat_notify_view_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/x3"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/x3"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/item_chat_notify_view_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/x30"
            android:paddingTop="@dimen/x8"
            android:paddingEnd="@dimen/x20"
            android:paddingBottom="@dimen/x8"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/x28" />
    </LinearLayout>
</LinearLayout>
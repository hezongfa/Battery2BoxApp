<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_main_menu_head_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/pic_bg_menu"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lay_main_menu_head_iv"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x150"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="@dimen/x50"
            android:layout_marginTop="@dimen/x60" />

        <TextView
            android:id="@+id/lay_main_menu_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x50"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginBottom="@dimen/x50"
            android:text="xcxcxcxc"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x42" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#efeff4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/lay_main_menu_wallet_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90">

                <TextView
                    android:id="@+id/lay_main_menu_wallet_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@mipmap/ic_main_menu_wallet"
                    android:drawablePadding="@dimen/x30"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x30"
                    android:text="@string/main_3"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/lay_main_menu_wallet_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x30"
                    android:background="@drawable/bg_menu_money"
                    android:paddingStart="@dimen/x16"
                    android:paddingTop="@dimen/x10"
                    android:paddingEnd="@dimen/x16"
                    android:paddingBottom="@dimen/x10"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x24" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90">

                <TextView
                    android:id="@+id/lay_main_menu_coupon_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableStart="@mipmap/ic_main_menu_coupon"
                    android:drawablePadding="@dimen/x30"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/x30"
                    android:text="@string/main_4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/lay_main_menu_coupon_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/x30"
                    android:background="@drawable/bg_menu_money"
                    android:paddingStart="@dimen/x16"
                    android:paddingTop="@dimen/x10"
                    android:paddingEnd="@dimen/x16"
                    android:paddingBottom="@dimen/x10"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x24" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lay_main_menu_activity_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_activity"
                android:drawablePadding="@dimen/x26"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_13"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/lay_main_menu_record_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_record"
                android:drawablePadding="@dimen/x33"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/lay_main_menu_invite_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_invite"
                android:drawablePadding="@dimen/x30"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_6"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/lay_main_menu_business_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_business"
                android:drawablePadding="@dimen/x30"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_7"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/lay_main_menu_help_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_help"
                android:drawablePadding="@dimen/x30"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_8"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/lay_main_menu_more_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:drawableStart="@mipmap/ic_main_menu_more"
                android:drawablePadding="@dimen/x30"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/x30"
                android:text="@string/main_9"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x30" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/pic_bg_menu_2" />
</LinearLayout><!--</ScrollView>-->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x116"
    android:orientation="vertical"
    android:paddingStart="@dimen/x42"
    android:paddingEnd="@dimen/x42">

    <com.chenyi.baselib.widget.CircleImageView
        android:id="@+id/item_search_user_iv"
        android:layout_width="@dimen/x76"
        android:layout_height="@dimen/x76"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_search_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/x30"
        android:layout_toEndOf="@id/item_search_user_iv"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x30" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_alignParentBottom="true"
        android:background="@color/line" />
</RelativeLayout>
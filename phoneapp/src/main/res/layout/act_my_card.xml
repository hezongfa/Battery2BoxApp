<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/x15"
    android:paddingEnd="@dimen/x15">


    <RelativeLayout
        android:id="@+id/act_my_card_rl"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:background="@drawable/bg_round_fcf3d1"
        android:paddingStart="@dimen/x30"
        android:paddingTop="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:paddingBottom="@dimen/x30">

        <TextView
            android:id="@+id/act_my_card_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x34" />

        <TextView
            android:id="@+id/act_my_card_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_my_card_tv1"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/x34"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/act_my_card_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x55" />

    </RelativeLayout>

    <Button
        android:id="@+id/act_my_card_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x80"
        android:background="@drawable/bg_round_fcf3d1"
        android:text="@string/wallet_25"
        android:textColor="#FF9500"
        android:textSize="@dimen/x28" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_my_card_main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/act_my_card_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x80"
        android:paddingStart="@dimen/x45"
        android:paddingTop="@dimen/x30"
        android:paddingEnd="@dimen/x45"
        android:paddingBottom="@dimen/x30"
        android:visibility="gone">

        <TextView
            android:id="@+id/act_my_card_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/act_my_card_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/act_my_card_tv1"
            android:layout_marginTop="@dimen/x10"
            android:textColor="@color/gray_888888"
            android:textSize="@dimen/x36"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/act_my_card_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/x55"
            android:src="@mipmap/ic_card_v1" />

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/act_my_card_tv2"
            android:layout_height="@dimen/x2"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/line" />
    </RelativeLayout>

    <Button
        android:id="@+id/act_my_card_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_marginStart="@dimen/x115"
        android:layout_marginTop="@dimen/x80"
        android:layout_marginEnd="@dimen/x115"
        android:background="@mipmap/pic_enter_btn_bg"
        android:text="@string/wallet_25"
        android:textColor="#000000"
        android:textSize="@dimen/x28" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/act_card_edit_main_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/act_card_edit_card_etil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x14"
        android:theme="@style/InputStyle"
        app:errorEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/act_card_edit_card_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_card_v"
            android:drawablePadding="@dimen/x20"
            android:hint="@string/wallet_9"
            android:inputType="textCapCharacters"
            android:paddingBottom="@dimen/x30"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x30" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/act_card_edit_user_name_etil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x14"
        android:theme="@style/InputStyle"
        app:errorEnabled="false">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/act_card_edit_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wallet_11"
            android:inputType="textCapCharacters"
            android:paddingBottom="@dimen/x30"
            android:textColor="@android:color/black"
            android:textSize="@dimen/x30" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/act_card_edit_date_month_fl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/act_card_edit_date_month_etil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x14"
                android:theme="@style/InputStyle"
                app:errorEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/act_card_edit_date_month_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/wallet_13_14"
                    android:inputType="textCapCharacters"
                    android:paddingBottom="@dimen/x30"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x30" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:id="@+id/act_card_edit_date_month_v"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/x14"
                android:theme="@style/InputStyle"
                app:errorEnabled="false">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/act_card_edit_cvv_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1234567890"
                    android:hint="@string/wallet_15"
                    android:inputType="number"
                    android:paddingBottom="@dimen/x30"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x30" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/act_card_edit_scan_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/x30"
                android:src="@mipmap/ic_card_scan" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/act_card_edit_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x60"
        android:layout_marginBottom="@dimen/x100"
        android:background="@mipmap/pic_enter_btn_bg"
        android:paddingStart="@dimen/x80"
        android:paddingEnd="@dimen/x80"
        android:text="@string/app_13"
        android:textColor="@android:color/black"
        android:textSize="@dimen/x32" />
</LinearLayout>
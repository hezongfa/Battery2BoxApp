    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_layContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x110" />

        <LinearLayout
            android:id="@+id/act_main_bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x127"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/pic_main_bottom_bg"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/act_main_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    
                    android:gravity="center"
                    android:text="@string/main_tab_4"
                    android:textColor="@color/gray_666666"
                    android:textSize="10dp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/act_main_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    
                    android:gravity="center"
                    android:text="@string/main_tab_3"
                    android:textColor="@color/gray_666666"
                    android:textSize="10dp" />
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <FrameLayout
                android:id="@+id/act_main_chat_fl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/act_main_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    
                    android:gravity="center"
                    android:text="@string/main_tab_1"
                    android:textColor="@color/gray_666666"
                    android:textSize="10dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/act_main_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    
                    android:gravity="center"

                    android:text="@string/main_tab_2"
                    android:textColor="@color/gray_666666"
                    android:textSize="10dp" />
            </FrameLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/act_m_scan_iv"
            android:layout_width="@dimen/x136"
            android:layout_height="@dimen/x136"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x50"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_main_bottom_scan" />
    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/dialog_shop_des_rl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/dialog_shop_des_click_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/bg_round_c"
        android:paddingTop="@dimen/x26"
        android:paddingBottom="@dimen/x30">

        <ImageView
            android:id="@+id/dialog_shop_des_iv"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            android:layout_marginStart="@dimen/x12"
            android:layout_marginEnd="@dimen/x10"
            android:background="@drawable/bg_round_fcf3d1"
            android:padding="@dimen/x12"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/dialog_shop_des_nav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:background="@android:color/transparent"
            android:src="@mipmap/ic_shop_nav" />

        <TextView
            android:id="@+id/dialog_shop_des_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/dialog_shop_des_nav_btn"
            android:layout_toEndOf="@id/dialog_shop_des_iv"
            android:textColor="#ff8a00"
            android:textSize="@dimen/x28" />

        <TextView
            android:id="@+id/dialog_shop_des_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_shop_des_name_tv"
            android:layout_marginTop="@dimen/x15"
            android:layout_toStartOf="@id/dialog_shop_des_nav_btn"
            android:layout_toEndOf="@id/dialog_shop_des_iv"
            android:drawableStart="@mipmap/ic_shop_time"
            android:drawablePadding="@dimen/x8"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/dialog_shop_des_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_shop_des_time_tv"
            android:layout_marginTop="@dimen/x15"
            android:layout_toStartOf="@id/dialog_shop_des_nav_btn"
            android:layout_toEndOf="@id/dialog_shop_des_iv"
            android:drawableStart="@mipmap/ic_shop_location"
            android:drawablePadding="@dimen/x8"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/x22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_shop_des_address_tv"
            android:layout_marginTop="@dimen/x40"
            android:orientation="horizontal"
            android:paddingStart="@dimen/x100"
            android:paddingEnd="@dimen/x100">

            <TextView
                android:id="@+id/dialog_shop_des_borrow_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x70"
                android:background="@drawable/bg_yellow_edb049_r90px"
                android:gravity="center"
                android:paddingStart="@dimen/x40"
                android:paddingEnd="@dimen/x40"
                android:text="@string/shop_1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x26" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/dialog_shop_des_return_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x70"
                android:background="@drawable/bg_yellow_edb049_r90px"
                android:gravity="center"
                android:paddingStart="@dimen/x40"
                android:paddingEnd="@dimen/x40"
                android:text="@string/shop_2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/x26" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
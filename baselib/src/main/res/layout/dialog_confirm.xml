<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_confirm_bg"
    android:orientation="vertical">

    <com.chenyi.baselib.widget.autofixtext.AutofitTextView
        android:id="@+id/ConfirmDialog_mTitleTv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#1b1b1b"
        android:textSize="14dp" />

    <com.chenyi.baselib.widget.autofixtext.AutofitTextView
        android:id="@+id/ConfirmDialog_mContentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="80dp"
        android:padding="15dp"
        android:textColor="#1b1b1b"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ConfirmDialog_mOneBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="#080a2b"
            android:textSize="13dp" />

        <!--<View-->
        <!--android:layout_width="0.1dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#e6e6e6" />-->

        <Button
            android:id="@+id/ConfirmDialog_mTwoBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:textColor="@color/red_d72c2a"
            android:textSize="13dp" />
    </LinearLayout>
</LinearLayout>